{
    "name": "grover",
    "description": "PhantomJS wrapper for YUITest",
    "version": "0.1.1",
    "engines": { "node": ">=0.4.0" },
    "bin": {
        "grover": "./bin/grover.js"
    },
    "main": "./lib/grover.js",
    "dependencies": {
        "ansi-color": "*",
        "yuitest": "*",
        "cli-table": "*",
        "echoecho": "*",
        "istanbul": "~0.1.10",
        "express": "~2.5.0",
        "glob": "~3.1.12",
        "timethat": "~0.0.1"
    },
    "devDependencies": {
        "yui-lint": "~0.1.1",
        "jshint": "~0.9.0",
        "rimraf": "*",
        "vows": "*"
    },
    "keywords": [
        "yuitest",
        "phantomjs",
        "cli testing",
        "testing"
    ],
    "scripts": {
        "pretest": "jshint --config ./node_modules/yui-lint/jshint.json ./lib/*.js ./lib/*/*.js ./bin/*.js",
        "test": "istanbul cover --print both vows -- --spec ./tests/*.js"
    },
    "preferGlobal": "true",
    "bugs": { "url" : "http://github.com/davglass/grover/issues" },
    "licenses":[
        {
            "type" : "BSD",
            "url" : "https://github.com/davglass/grover/blob/master/LICENSE"
        }
    ],
    "repository": {
        "type":"git",
        "url":"http://github.com/davglass/grover.git"
    }
}
